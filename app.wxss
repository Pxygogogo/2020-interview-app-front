.marginTopBottom {
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.title{
  border-left: 5px solid #00B26A;
  padding-left: 20px;
  font-size: 18px;
  font-weight: 500;
  margin-bottom: 5px;
}

view{
  box-sizing: border-box;
}


.separate{
  width: 100%;
  height: 20rpx;
  background-color: #dfdfdf;
}


/* avatar组件 */
.avatar-box{
  width: 20%;
  height: 200rpx;
  padding: 10rpx;
  padding-top: 20rpx;
}

.img-box{
  display: flex;
  justify-content: center;
  padding: 5rpx;
}
.img{
  width: 90rpx;
  height: 90rpx;
}
.avatar-box text{
  margin-top: 8rpx;
  display: block;
  text-align: center;
  font-size: 12px;
}

.active{
  background-color: #f8f8f9;
}


/* tabBar样式 */

.tabBar {
  width: 100%;
  height: 80rpx;
  position: fixed;
  background: #fff;
  bottom: 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx;
  border-top: 1px solid #c5c8ce;

}

.tabBar image{
  width: 40rpx;
  height: 40rpx;
}

.index, .share, .discuss-more {
  width: 33%;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share{
  border-left: 1px solid #c5c8ce;
  border-right: 1px solid #c5c8ce;
}
