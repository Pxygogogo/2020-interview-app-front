.marginTopBottom {
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.title {
  border-left: 5px solid #00b26a;
  padding-left: 20px;
  font-size: 18px;
  font-weight: 500;
  margin-bottom: 5px;
}

view {
  box-sizing: border-box;
}

.separate {
  width: 100%;
  height: 20rpx;
  background-color: #dfdfdf;
}

/* avatar组件 */
.avatar-box {
  width: 20%;
  height: 200rpx;
  padding: 10rpx;
  padding-top: 20rpx;
}

.img-box {
  display: flex;
  justify-content: center;
  padding: 5rpx;
}
.img {
  width: 90rpx;
  height: 90rpx;
}
.avatar-box text {
  margin-top: 8rpx;
  display: block;
  text-align: center;
  font-size: 12px;
}

.active {
  background-color: #f8f8f9;
}

/* tabBar样式 */

.tabBar {
  width: 100%;
  height: 80rpx;
  position: fixed;
  background: #fff;
  bottom: 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx;
  border-top: 1px solid #c5c8ce;
}

.tabBar image {
  width: 40rpx;
  height: 40rpx;
}

.index,
.share,
.discuss-more {
  width: 33%;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share {
  border-left: 1px solid #c5c8ce;
  border-right: 1px solid #c5c8ce;
}

/* 
  ======== 
  搜索部分css 
  ========
*/
.search {
  width: 90%;
  height: auto;
  display: flex;
  align-items: center;
  margin: 0rpx auto;
}

.search-left {
  flex: 4;
  background-color: rgb(240, 240, 240);
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 15rpx;
}

.search input {
  width: 90%;
  height: 100%;
  font-size: 29rpx;
  margin-left: 20rpx;
}

.icon-search {
  width: 10%;
  height: 50rpx;
}
