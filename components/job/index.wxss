.container {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}

.avatar-box {
  width: 25%;
  height: 180rpx;
  padding: 10rpx;
}

.img-box {
  display: flex;
  justify-content: center;
  padding: 5rpx;
}

.img {
  width: 90rpx;
  height: 90rpx;
}

.avatar-box text {
  margin-top: 8rpx;
  display: block;
  text-align: center;
  font-size: 12px;
}

.active {
  background-color: #f8f8f9;
}
