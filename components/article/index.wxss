.article-box {
  width: 100%;
  height: 250rpx;
  border-bottom: 1px solid #ccc;
  padding: 15rpx;
}

.userInfo {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: flex-start;
}

.left-avatar {
  width: 20%;
  padding: 10rpx;
  display: flex;
  justify-content: center;
}

.left-avatar image {
  width: 60rpx;
  height: 60rpx;
}

.right {
  width: 80%;
}

.nickname,
.last-reply {
  width: 100%;
  padding: 5rpx;
  font-size: 12px;
  color: #ff520f;
  font-weight: 500;
}

.last-reply {
  color: black;
}

.abstract {
  height: 140rpx;
}

.article-title {
  height: 40rpx;
  line-height: 40rpx;
  padding: 15rpx;
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.desc {
  height: 95rpx;
  font-size: 14px;
  padding: 15rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}