.search{
  width: 90%;
  height: auto;
  display: flex;
  align-items: center;
  margin: 0rpx auto;
}

.search-left{
  flex: 4;
  background-color: rgb(240, 240, 240);
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 15rpx;
}

.search input{
  width: 90%;
  height: 100%;
  font-size: 29rpx;
  margin-left: 20rpx;
}

.icon-search{
  width: 10%;
  height: 50rpx;
}


.hot-position{
  height: 400rpx;
  width: 100%;
  padding: 20rpx;
  padding-left: 0;
}


.hot-company{
  width: 100%;
  min-height: 500rpx;
  padding: 20rpx;
  padding-left: 0;
}