page {
  height: 100%;
}

.index-wrapper {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 10rpx 30rpx;
  font-size: 26rpx;
  color: #aaa;
  box-sizing: border-box;
  justify-content: space-between;
}

/* title start */
.question-title {
  display: flex;
  padding: 0;
  justify-content: start;
  font-size: 1.2em;
  font-weight: 400;
}

.head {
  color: #86b3f5;
}

/* title end */
/* desciption start*/
.description {
  background-color: #282c34;
}

/* content */
.description view {
}

/* description end */
/* options start */
.options-wrapper {
  margin-top: 20rpx;
}

.options-wrapper .option {
  display: flex;
  justify-content: start;
  padding: 20rpx;
}

.option .character {
  width: 45rpx;
  height: 45rpx;
  text-align: center;
  margin-right: 20rpx;
  border: 2rpx solid #aaa;
  border-radius: 50%;
}

.option rich-text {
  font-size: 1.2em;
}

/* options end */
/* control */
.control {
  display: flex;
  width: 100%;
  padding: 20rpx 0;
}

.control button {
  flex: 1;
  color: #86b3f5;
  background: #fff;
  font-weight: 400;
  font-size: 31rpx;
}

/* selected */
.option .character.selected {
  background-color: #5d9df0;
  color: #fff;
  border: 1px solid #5d9df0;
}

.row-5 {
  display: flex;
  margin: 18vh auto;
  text-align: center;
  justify-content: center;
}

.row-5 .answer-box {
  width: 10vmax;
  height: 10vmax;
  margin: 2px;
  color: #fff;
  line-height: 10vmax;
}

.wrong {
  background-color: #ff4545;
}
.correct {
  background-color: #0aea7d;
}
.analyze-wrapper {
  padding: 20rpx;
  font-size: 0.8;
}
.analyze-wrapper .wrong-tip {
  color: #ff9797;
}
.analyze-wrapper .correct-tip {
  color: #86b3f5;
}
