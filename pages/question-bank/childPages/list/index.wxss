page {
  height: 100%;
}

.list-wrapper {
  display: flex;
  flex-direction: column;
  height: 100%;
  box-sizing: border-box;
  background-color: #f1f1f1;
}

/* question start */
.list-wrapper .question-wrapper {
  padding: 20rpx;
  background-color: #fff;
  font-size: 0.3em;
  height: 100%;
}

.question-wrapper .content-wrapper {
  margin: 25rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 3rpx 20px #d5dff1;
}

.question-wrapper .content-wrapper .tag {
  display: inline-block;
  box-sizing: border-box;
  margin: 10rpx 0;
  padding: 12rpx;
  font-size: 16rpx;
  font-weight: 400;
  border-radius: 8rpx;
  background: #8cdcfc;
}

/* question end */
