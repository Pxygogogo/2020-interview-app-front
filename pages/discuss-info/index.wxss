.container {
  width: 100%;
  padding: 10rpx;
  z-index: -1;
}

.discuss-title {
  height: 120rpx;
  font-size: 18px;
  font-weight: 600;
  text-align: left;
  color: #17233d;
}

.userInfo {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
}

.left-avatar {
  width: 20%;
  padding: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.left-avatar image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.middle-info {
  width: 50%;
}

.author,
.release-time {
  width: 100%;
  font-size: 12px;
}

.author {
  color: red;
}

.release-time {
  color: #c5c8ce;
}

.right {
  width: 20%;
  font-size: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.right image {
  width: 40rpx;
  height: 40rpx;
}
